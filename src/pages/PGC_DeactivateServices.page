<apex:page controller="PGC_DeactivateServicesController" showHeader="false" sidebar="false">
	<style>
		.bEditBlock{
			border-width: 0 !important;
		}
		.pbHeader > table > tbody > tr > td.pbTitle + td,
		.pbBody .pbSubheader{
			display: none;
		}
		th.labelCol label {
			white-space: nowrap;
		}
		.pbHeader > table{
			padding-top: 0 !important;
		}
		.pbHeader > table > tbody > tr > td.pbTitle{
			padding-top: 0 !important;
    		padding-bottom: 0 !important;
		}
		.pbHeader > table > tbody > tr > td.pbTitle > h2{
			font-size: 12px;
		}
		.innerContent{
			padding-top: 8px !important;
			padding-bottom: 0 !important;
		}
	</style>
 	<apex:form >
 		<apex:pageMessages id="msg-error" />
        <apex:pageBlock title="Please enter deactivation date and reason for service(s):" mode="edit">
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!deactivateServices}" value="Deactivate" oncomplete="if ('{!isRefreshed}'== 'true') top.location = '/{!$CurrentPage.parameters.accountId}';" rerender="termination-reason,end-date,msg-error" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="" columns="1">
                <apex:inputField value="{!tractService.End_Date__c}" required="true" id="end-date" />
                <apex:inputField value="{!tractService.TerminationReason__c}" required="true" id="termination-reason"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>