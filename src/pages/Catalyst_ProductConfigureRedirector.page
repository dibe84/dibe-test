<apex:page standardController="Opportunity" extensions="Catalyst_ProductConfigureRedirectorCon"
wizard="false" 
showQuickActionVfHeader="false" 
cache="false" 
standardStylesheets="false" 
showHeader="false" 
setup="false" 
showChat="false" 
sidebar="false" 
applyHtmlTag="false" 
applyBodyTag="false">
    <style>
        #loadingFirstLoad{
            position: fixed;
            width: 100px;
            height: 100px;
            top: 50%;
            margin-top: -50px;
            z-index: 10000;
            left: 0;
            right: 0;
            margin-left: auto;
            margin-right: auto;
        }
        #loadingFirstLoad img{
            width: 100%;
        }
    </style>
    <script src="{!BaseURL}/lightning/lightning.out.js"></script>
    
    <div id="loadingFirstLoad">
        <img src="{!URLFOR($Resource.lightning_component, 'assets/images/spinners/slds_spinner_brand.gif')}" alt="Loading Conponent" />
    </div>
    <apex:includeLightning />

    <div id="lightning" />
    
    <script>        
        $Lightning.use("c:Catalyst_ProductConfigureV3", function() {
          $Lightning.createComponent("c:Catalyst_MainWindow",
          { oppId : "{!opportunity.id}" },
          "lightning",
          function(cmp) {
            // do some stuff
            document.getElementById('loadingFirstLoad').style.display = 'none';
          });
        });
    </script>
</apex:page>